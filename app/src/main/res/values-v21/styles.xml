<resources>

    <style name="Theme.NewMotoTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/my_primary_color</item>
        <item name="colorPrimaryDark">@color/my_primary_dark_color</item>
        <item name="colorAccent">@color/my_accent_color</item>
        <item name="md_corner_radius">16dp</item>
<!--        <item name="android:navigationBarColor">@color/my_primary_color</item>-->
        <item name="md_background_color">@color/my_primary_color</item>
        <item name="md_color_button_text">@color/my_white_color</item>
        <item name="md_color_content">@color/my_white_color</item>
        <item name="md_color_title">@color/my_white_color</item>
